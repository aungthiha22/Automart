<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:id="@+id/image_layout"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/profile_background">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/user_logo"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            >
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aung Thiha Kyaw"
                android:padding="@dimen/margin_medium"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aungthihakyaw@gmail.com"
                android:padding="@dimen/margin_small"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_medium">
            <android.support.v7.widget.CardView
                android:id="@+id/card_pending"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/dark"
                app:cardElevation="@dimen/margin_small"
                android:layout_margin="@dimen/margin_small">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Pending Orders"
                    android:background="@color/white"
                    android:padding="@dimen/margin_medium"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/size_tablet_small"/>

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:src="@mipmap/right_arrow"
                    android:padding="5dp"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small">
            <android.support.v7.widget.CardView
                android:id="@+id/card_payment"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardElevation="@dimen/margin_small"
                android:layout_margin="@dimen/margin_small">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Payment Complete Orders"
                    android:background="@color/white"
                    android:padding="@dimen/margin_medium"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/size_tablet_small"/>

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:src="@mipmap/right_arrow"
                    android:padding="5dp"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small">
            <android.support.v7.widget.CardView
                android:id="@+id/card_cancel"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardElevation="@dimen/margin_small"
                android:layout_margin="@dimen/margin_small">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Cancel Orders"
                    android:background="@color/white"
                    android:padding="@dimen/margin_medium"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/size_tablet_small"/>

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:src="@mipmap/right_arrow"
                    android:padding="5dp"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>