<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/blog_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="@dimen/margin_small"
        app:cardCornerRadius="@dimen/margin_small"
        android:padding="@dimen/margin_small">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/blog_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/automart_logo"
                android:background="@color/colorWhite"
                android:padding="@dimen/margin_small"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/blog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_small"
                    android:text="Investing in Automotive Content"
                    android:fontFamily="@font/aileron_regular"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/text_size_medium"
                    android:maxLines="1"
                    android:paddingTop="@dimen/margin_medium"
                    android:visibility="visible"/>


                <RatingBar
                    android:id="@+id/review_ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/yellow"
                    android:rating="2"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:paddingTop="@dimen/margin_small"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/blog_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Far too many car companies invest little into their websites. Right now, most car companies are found via online search. While people do use local car dealers and repair services, those companies rarely get their business from ads and get it more from traffic and a storefront."
                    android:paddingBottom="@dimen/margin_medium"
                    android:paddingLeft="@dimen/margin_medium_2"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_medium"
                    android:textColor="@color/cardview_dark_background"
                    android:fontFamily="@font/aileron_regular"
                    android:maxLines="2"/>

                <!-- <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:background="#cacaca"/>-->
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>