<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/margin_xxlarge">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="about us"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/raleway_bold"
                android:textSize="@dimen/text_regular_3x"
                android:textColor="@color/colorPrimary"/>
            <com.rebook.automart.widget.ZawgyiTextView
                android:id="@+id/myanmar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text myanmar"
                android:layout_gravity="start"
                android:gravity="start"
                android:textColor="@color/dark"
                android:fontFamily="@font/aileron_regular"
                android:padding="@dimen/margin_medium"
                android:textSize="@dimen/text_normal"/>

            <TextView
                android:id="@+id/about_us_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="about_us_1"
                android:layout_gravity="start"
                android:gravity="start"
                android:textColor="@color/dark"
                android:fontFamily="@font/aileron_regular"
                android:padding="@dimen/margin_medium"
                android:textSize="@dimen/text_normal"/>

            <TextView
                android:id="@+id/about_us_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="about_us_2"
                android:layout_gravity="start"
                android:gravity="start"
                android:textColor="@color/dark"
                android:fontFamily="@font/aileron_regular"
                android:padding="@dimen/margin_medium"
                android:textSize="@dimen/text_normal"/>
            <TextView
                android:id="@+id/about_us_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="about_us_2"
                android:layout_gravity="start"
                android:gravity="start"
                android:textColor="@color/dark"
                android:fontFamily="@font/aileron_regular"
                android:padding="@dimen/margin_medium"
                android:textSize="@dimen/text_normal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SHOP LOCATION"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:textSize="@dimen/text_regular_3x"
                android:textColor="@color/colorPrimary"/>
            <fragment
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/map"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>