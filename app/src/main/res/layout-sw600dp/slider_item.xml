<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    >

    <!--app:cardUseCompatPadding="true" padding card view-->

        <ImageView
            android:id="@+id/slider_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@color/white"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/slider_item_name"
              android:text="Your future start here"
              android:layout_marginTop="60dp"
              android:paddingBottom="@dimen/margin_small"
              android:paddingLeft="@dimen/margin_medium_3"
              android:textSize="@dimen/size_tablet_large"
              android:textColor="@color/colorWhite"
              android:maxLines="1"
              android:visibility="visible"/>

          <TextView
              android:id="@+id/slider_item_description"
              android:layout_below="@id/slider_item_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="description"
              android:layout_marginTop="@dimen/margin_large"
              android:paddingTop="@dimen/margin_small"
              android:paddingBottom="@dimen/margin_medium_2"
              android:textColor="@color/colorWhite"
              android:maxLines="1"
              android:textSize="@dimen/size_tablet_large"
              android:layout_marginLeft="@dimen/margin_medium_3"
              android:visibility="visible"/>

    <com.andexert.library.RippleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slider_item_buy_now"
        android:layout_below="@id/slider_item_description"
        android:layout_marginTop="150dp"
        android:background="@drawable/selector"
        android:layout_marginLeft="@dimen/margin_medium_3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUY NOW"
            android:padding="@dimen/margin_medium_2"
            android:textSize="@dimen/size_tablet_medium"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:textColor="@color/white"
            android:visibility="visible"/>
    </com.andexert.library.RippleView>

</RelativeLayout>